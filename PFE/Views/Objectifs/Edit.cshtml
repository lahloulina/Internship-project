@model Objectif

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_Objectif" />
            <div class="form-group">
                <label asp-for="Label_Obj" class="control-label"></label>
                <input asp-for="Label_Obj" class="form-control" />
                <span asp-validation-for="Label_Obj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nom_Collaborateur" class="control-label"></label>
                <input asp-for="Nom_Collaborateur" class="form-control" />
                <span asp-validation-for="Nom_Collaborateur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notation_Globale" class="control-label"></label>
                <input asp-for="Notation_Globale" class="form-control" />
                <span asp-validation-for="Notation_Globale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rmq" class="control-label"></label>
                <input asp-for="Rmq" class="form-control" />
                <span asp-validation-for="Rmq" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
                <a asp-controller="Projets" asp-action="Index" class="btn btn-secondary mt-4" style="width:150px">Page précédente</a>
            </div>
        </form>
    </div>
</div>
