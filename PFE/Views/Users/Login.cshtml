@model PFE.Models.User
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";

}
@using Microsoft.AspNetCore.Mvc.Rendering
<style>
    .divider:after,
.divider:before {
content: "";
flex: 1;
height: 1px;
background: #eee;
}
.h-custom {
height: calc(100% - 73px);
}

</style>

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
               
                    <div class="card">
                        <div class="card-body ">
                            @using (Html.BeginForm("Login", "Users", FormMethod.Post))
                            {
                                <div class="form-label" for="form3Example3">
                                    @Html.Label("Email")
                                    @Html.TextBox("email", null, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Mot de passe")
                                    @Html.Password("password", null, new { @class = "form-control" })
                                </div>
                                <button type="submit" class="btn btn-primary btn-block mt-3 mb-4">
                                    Je me connecte
                                </button>

                                <p>Je n'ai pas de compte. <a asp-controller="Users" asp-action="Register">Je m'inscris</a></p>
                            }
                            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <p class="text-danger">@ViewBag.ErrorMessage</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
</section>